<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if current_trainer.id == @trainer.id  %>
    <%= button_to "Create New Pokemon", "/pokemons/new" %>
<% end %>

<p> Pokemons: </p>
<table class="table">
    <tr>
      <th> Pokemon </th>
      <th> Level </th>
      <th> Hp </th>
    </tr>
    <% @trainer.pokemons.each do |pokemon| %>
      <tr>
        <td>
          <%= pokemon.name %>
        </td>

        <td>
          <%= pokemon.level %>
        </td>

        <td>
          <%= pokemon.hp %>
        </td>

        <td>
          <%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %>
        </td>
      </tr>
    <% end %>
</table>
